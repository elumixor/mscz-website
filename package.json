{
    "name": "mscz-website",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "bun run serve:ssr",
        "build": "ng build",
        "dev": "concurrently \"bun run dev:front\" \"bun run dev:back\"",
        "dev:front": "NG_APP_URL=$(ip addr show eth0 | grep -oP '(?<=inet\\s)\\d+(\\.\\d+){3}') ng serve  --configuration=ru",
        "dev:back": "IP=$(ip addr show eth0 | grep -oP '(?<=inet\\s)\\d+(\\.\\d+){3}') NG_DEV=TRUE bun run server/main.ts",
        "lint": "ng lint",
        "test": "jest --verbose --passWithNoTests",
        "gmail": "bun run server/gmail/authenticate.ts",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch",
        "serve:ssr": "node dist/mscz-website/server/en/server.mjs",
        "translate:extract": "ng extract-i18n --output-path src/locale --format json",
        "translate": "translator edit src/locale/messages.json -l ru --file-token secret/deepl -p 3300"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^17.1.0",
        "@angular/common": "^17.1.0",
        "@angular/compiler": "^17.1.0",
        "@angular/core": "^17.1.0",
        "@angular/forms": "^17.1.0",
        "@angular/platform-browser": "^17.1.0",
        "@angular/platform-browser-dynamic": "^17.1.0",
        "@angular/platform-server": "^17.1.0",
        "@angular/router": "^17.1.0",
        "@angular/ssr": "^17.1.0",
        "@elumixor/frontils": "^1.2.0",
        "@google-cloud/local-auth": "^3.0.1",
        "@ngx-env/builder": "^17.3.0",
        "@types/i18n": "^0.13.12",
        "chalk": "^5.3.0",
        "cors": "^2.8.5",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-prettier": "^5.0.1",
        "express": "^4.18.2",
        "google-auth-library": "^9.8.0",
        "googleapis": "^134.0.0",
        "gsap": "^3.12.5",
        "i18n": "^0.15.1",
        "juice": "^10.0.0",
        "nodemailer": "^6.9.13",
        "rxjs": "~7.8.0",
        "tslib": "^2.3.0",
        "zone.js": "~0.14.3"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^17.1.0",
        "@angular-eslint/builder": "17.2.0",
        "@angular-eslint/eslint-plugin": "17.2.0",
        "@angular-eslint/eslint-plugin-template": "17.2.0",
        "@angular-eslint/schematics": "17.2.0",
        "@angular-eslint/template-parser": "17.2.0",
        "@angular/cli": "^17.1.0",
        "@angular/compiler-cli": "^17.1.0",
        "@angular/localize": "^17.3.3",
        "@elumixor/translator": "^0.0.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.12",
        "@types/node": "^18.18.0",
        "@types/nodemailer": "^6.4.14",
        "@typescript-eslint/eslint-plugin": "6.18.0",
        "@typescript-eslint/parser": "6.18.0",
        "concurrently": "^8.2.2",
        "deepl-node": "^1.13.0",
        "eslint": "^8.56.0",
        "http-server": "^14.1.1",
        "jest": "^29.7.0",
        "jest-preset-angular": "^14.0.0",
        "ts-jest": "^29.1.2",
        "typescript": "~5.3.2",
        "xml-formatter": "^3.6.2"
    }
}
